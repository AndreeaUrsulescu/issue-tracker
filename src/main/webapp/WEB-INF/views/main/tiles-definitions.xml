<tiles-definitions>
    <definition name="mainLayout" template="/WEB-INF/views/main/layout.jsp"/>
	<definition name="homeLayout" template="/WEB-INF/views/main/homeLayout.jsp"/>

    <definition name="home" extends="homeLayout">
        <put-attribute name="logo" value="/WEB-INF/views/main/home.jsp" />
    </definition>
    
    <definition name="register" extends="mainLayout">	
    	<put-attribute name="header" value="/WEB-INF/views/main/header.jsp"></put-attribute>
